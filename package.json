{
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "acp": "git add . && npm run commit && git push",
    "commit": "git-cz",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "semantic-release": "semantic-release --branches main"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "goat-component",
  "author": "pracharya2601@gmail.com",
  "module": "dist/goat-component.esm.js",
  "size-limit": [
    {
      "path": "dist/goat-component.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/goat-component.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@size-limit/preset-small-lib": "^4.11.0",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@tailwindcss/postcss7-compat": "^2.2.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@types/styled-components": "^5.1.10",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^6.0.0",
    "identity-obj-proxy": "^3.0.0",
    "postcss": "^7.0.36",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "rollup-plugin-postcss": "^4.0.0",
    "semantic-release": "^17.4.3",
    "size-limit": "^4.11.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "4.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cocoontechlab/goat-component.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
